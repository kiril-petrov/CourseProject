@using RecipeCourseProject.Models
@model ChefViewModel


@{
    ViewBag.Title = "Chefs";
}

<div class="table-actions">
    <h2>Chefs</h2>
    @Html.ActionLink("Add New Chef", "Edit", "Chef", null, new { @class = "btn btn-primary btn-sm" })
</div>

<table class="table table-striped">

    <thead>
    <th>ID</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
    </thead>

    <tbody>
        @foreach (ChefsViewModel chef in Model.chefsList)
        {
            <tr>
                <td>@chef.ID</td>
                <td>@chef.Name</td>
                <td>@Html.ActionLink("View", "View", "Chef", new { id = chef.ID }, new { @class = "btn btn-primary btn-sm" })</td>
                <td>@Html.ActionLink("Edit", "Edit", "Chef", new { id = chef.ID }, new { @class = "btn btn-primary btn-sm" })</td>
                <td>@Html.ActionLink("Delete", "Delete", "Chef", new { id = chef.ID }, new { onclick = "return confirm('Are you sure you to delete this chef?');", @class = "btn btn-primary btn-sm" })</td>
            </tr>
        }
    </tbody>

</table>

