@using RecipeCourseProject.Models
@model RecipeViewModel


@{
    ViewBag.Title = "Recipes";
}

<div class="table-actions">
    <h2>Recipes</h2>
    @Html.ActionLink("Add New Recipe", "Edit", "Recipe", null, new { @class = "btn btn-primary btn-sm" })
</div>

<table class="table table-striped">

    <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Chef</th>
    <th></th>
    <th></th>
    <th></th>
    </thead>

    <tbody>
        @foreach (RecipesViewModel recipe in Model.recipesList)
        {
            <tr>
                <td>@recipe.ID</td>
                <td>@recipe.Name</td>
                <td>@recipe.Chef.Name</td>
                <td>@Html.ActionLink("View", "View", "Recipe", new { id = recipe.ID }, new { @class = "btn btn-primary btn-sm" })</td>
                <td>@Html.ActionLink("Edit", "Edit", "Recipe", new { id = recipe.ID }, new { @class = "btn btn-primary btn-sm" })</td>
                <td>@Html.ActionLink("Delete", "Delete", "Recipe", new { id = recipe.ID }, new { onclick = "return confirm('Are you sure you to delete this recipe?');", @class = "btn btn-primary btn-sm" })</td>
            </tr>
        }
    </tbody>

</table>

